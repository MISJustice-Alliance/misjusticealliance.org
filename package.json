{
  "name": "misjusticealliance-org",
  "version": "1.0.0",
  "description": "Privacy-first legal advocacy platform - Anonymous Legal Assistance Group (MISJustice Alliance)",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testMatch='**/*.test.js'",
    "test:integration": "jest --testMatch='**/*.integration.test.js'",
    "test:accessibility": "jest --testMatch='**/*.a11y.test.js'",
    "test:security": "npm audit && snyk test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run format:check && npm run test",
    "prepare": "husky install",
    "workers:build": "esbuild cloudflare/workers/index.js --bundle --outfile=dist/worker.js --format=esm",
    "notion:sync": "node scripts/sync-notion.js",
    "seo:generate": "node scripts/generate-seo.js",
    "backup": "node scripts/backup.js"
  },
  "keywords": [
    "legal-advocacy",
    "civil-rights",
    "privacy",
    "cloudflare-workers",
    "notion-cms",
    "accessibility"
  ],
  "author": "Anonymous Legal Assistance Group (MISJustice Alliance)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MISJustice-Sites/misjusticealliance.org.git"
  },
  "bugs": {
    "url": "https://github.com/MISJustice-Sites/misjusticealliance.org/issues"
  },
  "homepage": "https://misjusticealliance.org",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.2",
    "lint-staged": "^15.2.0",
    "miniflare": "^3.20241106.2",
    "prettier": "^3.1.1",
    "wrangler": "^3.86.0"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.15"
  },
  "optionalDependencies": {
    "axe-core": "^4.8.3",
    "jest-axe": "^8.0.0",
    "snyk": "^1.1293.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "miniflare",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "cloudflare/workers/**/*.js",
      "!cloudflare/workers/**/*.test.js",
      "!cloudflare/workers/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
